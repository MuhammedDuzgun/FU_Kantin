<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPost_MP"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5E7CB342">

            <TextView
                android:id="@+id/textViewTitle_MP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold"
                app:fontFamily="@font/tahoma"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPost_MP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="TextView"
                android:textSize="14dp"
                app:fontFamily="@font/tahoma"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle_MP"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textViewUsername_MP_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="4dp"
                android:text="Yazar"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:fontFamily="@font/tahoma"
                app:layout_constraintEnd_toStartOf="@+id/imageButtonMorePost_MP"
                app:layout_constraintTop_toBottomOf="@+id/textViewPost_MP" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewUsername_MP_cardview"
                app:layout_constraintTop_toBottomOf="@+id/textViewPost_MP"
                app:srcCompat="@drawable/ic_user_profile" />

            <TextView
                android:id="@+id/textViewPostDate_MP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textSize="12sp"
                app:fontFamily="@font/tahoma"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButtonMorePost_MP"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <ImageButton
                android:id="@+id/imageButtonReplyPost_MP"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:background="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPost_MP"
                app:srcCompat="@drawable/add_comment"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imageButtonReadReplies_MP"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:background="@null"
                app:layout_constraintStart_toEndOf="@+id/imageButtonReplyPost_MP"
                app:layout_constraintTop_toBottomOf="@+id/textViewPost_MP"
                app:srcCompat="@drawable/comment"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textViewReplyNumber_MP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="48dp"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold"
                app:fontFamily="@font/tahoma"
                app:layout_constraintStart_toEndOf="@+id/imageButtonReadReplies_MP"
                app:layout_constraintTop_toBottomOf="@+id/textViewPost_MP"
                tools:ignore="TextSizeCheck" />

            <ImageButton
                android:id="@+id/imageButtonMorePost_MP"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPost_MP"
                app:srcCompat="@drawable/more"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>